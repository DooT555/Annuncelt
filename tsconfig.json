{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "pretty": true,
    "skipLibCheck": true,
    "outDir": "dist/",
    "removeComments": true,
    "preserveSymlinks": true
  },
  "include": ["src/**/*"],
  "ts-standard": {
    "ignore": [
      "dist",
      "src/**/*.js"
    ]
  }
}
